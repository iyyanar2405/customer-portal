{
  "compileOnSave": false,
  "compilerOptions": {
  "baseUrl": "./",
  "paths": {    
    "@customer-portal/environments": ["libs/environments/index.ts"],
    "@customer-portal/core": ["libs/core/index.ts"],
    "@customer-portal/data-access/*": ["libs/data-access/*/src/index.ts"],
    "@customer-portal/shared": ["libs/shared/src/index.ts"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2018",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["jest"]
  }
}